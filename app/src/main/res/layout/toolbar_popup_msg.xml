<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/giveMeMessageImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/row_send"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/fiftypSpacer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/giveMeMessageImg"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_below="@id/fiftypSpacer">
    <TextView
        android:id="@+id/msgQuery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is your new message?"
        />

    <EditText
        android:id="@+id/msgPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type Here"
        />
    </LinearLayout>
</RelativeLayout>